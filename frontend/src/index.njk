---
eleventyComputed:
    title: "{{ inicio[0].titleseo }}"
    description: "{{ inicio[0].descseo }}"
    keywords: "{{ inicio[0].keyseo }}"
layout: "base.njk"
permalink: "/{{ page.fileSlug }}/"
---

<div data-barba="container" data-barba-namespace="inicio" data-css="inicio" data-js="inicio">
    
{% for item in inicio %}

    <section id="section__hero">
        <div class="column__2 pad__lr__5">
            <div class="col__left">            
                <h1>{{ item.heroH1 }}</h1>
                <div>{{ item.heroH2 | safe }}</div>
                <p>{{ item.heroP }}</p>
                
            </div>
            <div class="col__right">
                <a class="btn__hero">
                    <img src="/images/btnhero_arrow.svg" />
                    <div class="btn__circle"><img src="/images/btnhero_circle.svg" /></div>
                </a>
            </div>
        </div>

        <div class="column__1 img__hero pad__lr__5">
            {% if item.heroImg %}
                <picture>
                    {% for format, images in item.heroImg %}
                    <source srcset="{{ images | srcset }}" sizes="(max-width: 1200px) 100vw, 1200px" type="image/{{ format }}">
                    {% endfor %}
                    <img src="{{ item.heroImg.jpeg[0].url }}" alt="{{ item.heroImgAlt }}">
                </picture>
            {% endif %}
        </div>

        <div class="column__3">
            <div class="col__left">
                <img src="/images/inicio/1000x800.png" />
                <img src="/images/inicio/1000x800.png" />
            </div>
            <div class="col__center">

            </div>
            <div class="col__right">
                <img src="/images/inicio/1000x800.png" />
                <img src="/images/inicio/1000x800.png" />
            </div>
        </div>

        <div class="column__1 vid__hero">
            <video id="video__inicio" width="320" height="240" autoplay loop muted>
                <source src="/images/emeka_inicio.mp4" type="video/mp4">
                Tu navegador no soporta este video
            </video>
        </div>

        <div class="sello">
            <img src="/images/emeka_sello.svg" alt="EMEKÃ desarrollos" />
        </div>

    </section>


    <section id="section__intro" class="pad__all__10 fadeInOut">
        <div class="column__2">
            <div class="col__left width__40">
                <h3>{{ item.introH3 }}</h3>
                <h2>{{ item.introH2 }}</h2>
            </div>
            <div class="col__right width__60">
                <div>{{ item.introRichText | safe }}</div>
                <a class="btn btn__hero">{{ item.introBtn }}</a>
                <div class="column__2 mar__top__5">
                    <div class="col__left flex__justify__sb width__30">
                        {% if item.introImg2 %}
                        <picture>
                            {% for format, images in item.introImg2 %}
                            <source srcset="{{ images | srcset }}" sizes="(max-width: 600px) 100vw, 600px" type="image/{{ format }}">
                            {% endfor %}
                            <img src="{{ item.introImg2.jpeg[0].url }}" alt="{{ item.introImg2Alt }}">
                        </picture>
                        {% endif %}
                    </div>
                    <div class="col__right width__70 pad__left__5">
                        {% if item.introImg1 %}
                        <picture>
                            {% for format, images in item.introImg1 %}
                            <source srcset="{{ images | srcset }}" sizes="(max-width: 900px) 100vw, 900px" type="image/{{ format }}">
                            {% endfor %}
                            <img src="{{ item.introImg1.jpeg[0].url }}" alt="{{ item.introImg1Alt }}">
                        </picture>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section id="section__productos" class="pad__all__5">
        <div class="column__1">
            <h2>Productos destacados</h2>
            <ul role="list" class="listado__x3 width__100 pad__top__5">
                {% for item in item.recentProdRef.recentProducts %}
                    {% include "producto-card.njk" %}
                {% endfor %}
            </ul>
        </div>
    </section>

{% endfor %}
</div>